 @{
    ViewBag.Title = "Add Customer";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";

}
<div class="right_col" role="main">
    <div class="EditCategory">
        <div class="page-title">
            <div class="title_left">
                <h4>QUẢN LÝ KHUYẾN MÃI</h4>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row" style="display: flex">
            <div class="col-md-6 col-sm-6  " style="height:100vh">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thêm khuyến mãi</h2>
                        <div class="clearfix"></div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-row"> 
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">ID khuyến mãi</label>
                                <input type="text" class="form-control" value="123" disabled>
                                <input type="hidden" value="7" name="idDiscount" />
                            </div> 
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Tên chương trình khuyến mãi</label>
                                <input type="text" class="form-control" name="nameDiscount" required="" placeholder="Nhập tên chương trình khuyến mãi">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Số lượng chương trình khuyến mãi</label>
                                <input type="text" class="form-control" name="quantityDis" required="" placeholder="Nhập số lượng khuyến mãi">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Ngày bắt đầu</label>
                                <input type="tel" class="form-control" name="dateStart" required="" placeholder="Nhập ngày bắt đầu">
                                
                            </div>
                        </div>
                         <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Ngày kết thúc</label>
                                <input type="tel" class="form-control" name="dateEnd" required="" placeholder="Nhập ngày kết thúc">
                                
                            </div>
                        </div>
                         <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Số khuyến mãi</label>
                                <input type="tel" class="form-control" name="numberDiscount" required="" placeholder="Nhập số khuyến mãi">
                                
                            </div>
                        </div>
                        <br>
                        <div class="modal-footer">
                            <a href="../../Admin/DiscountManagement" name="submit-cancel" class="btn btn-danger">Cancel</a>
                            <input type="submit" name="submit-save" class="btn btn-success" value="Save" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

